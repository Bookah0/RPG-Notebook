<UserControl x:Class="RPG_Notebook.DamageTypeItemUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RPG_Notebook"
             mc:Ignorable="d" 
             d:DesignHeight="124.177" d:DesignWidth="98.228">
    <Grid>
        <Grid Background="#FFFDFDFD">
            <Border BorderBrush="Black" BorderThickness="1"/>
            <Image x:Name="type_image" HorizontalAlignment="Center" Height="84" Margin="0,10,0,0" VerticalAlignment="Top" Width="73" Source="/Icons/Burn Damage.png" MouseDown="Choose_type"/>
            <Label x:Name="type_name" Content="Burn damage" HorizontalAlignment="Center" Margin="0,88,0,0" VerticalAlignment="Top" FontSize="14" Width="175" HorizontalContentAlignment="Center"/>
        </Grid>

    </Grid>
</UserControl>
